{
  "net_name": "ARCI",
  "global":{
      "model_type": "PY",
      "weights_file": "examples/xiaomu/weights/arci_classify.weights",
      "save_weights_iters": 10,
      "num_iters": 500,
      "display_interval": 10,
      "test_weights_iters": 10,
      "optimizer": "adam",
      "learning_rate": 0.0001
  },
  "inputs": {
    "share": {
        "text1_corpus": "./data/xiaomu/classification/corpus_preprocessed.txt",
        "text2_corpus": "./data/xiaomu/classification/corpus_preprocessed.txt",
        "use_dpool": false,
        "embed_size": 100,
        "train_embed": true,
        "vocab_size": 718,
        "target_mode": "classification",
        "class_num": 2,
        "text1_maxlen": 50,
        "text2_maxlen": 50
    },
    "train": {
        "input_type": "PointGenerator", 
        "phase": "TRAIN",
        "use_iter": false,
        "query_per_iter": 20,
        "batch_per_iter": 5,
        "batch_size": 100,
        "relation_file": "./data/xiaomu/classification/relation_train.txt"
    },
    "valid": {
        "input_type": "PointGenerator", 
        "phase": "EVAL",
        "batch_size": 100,
        "relation_file": "./data/xiaomu/classification/relation_valid.txt"
    },
    "test": {
        "input_type": "PointGenerator", 
        "phase": "EVAL",
        "batch_size": 100,
        "relation_file": "./data/xiaomu/classification/relation_test.txt"
    },
    "predict": {
        "input_type": "PointGenerator", 
        "phase": "PREDICT",
        "batch_size": 100,
        "relation_file": "./data/xiaomu/classification/relation_test.txt"
    }
  },
  "outputs": {
    "predict": {
      "save_format": "TEXTNET",
      "save_path": "predict.test.arci_classify.txt"
    }
  },
  "model": {
    "model_path": "matchzoo/models/",
    "model_py": "arci.ARCI",
    "setting": {
        "kernel_count": 32,
        "kernel_size": 3,
        "q_pool_size": 2,
        "d_pool_size": 2,
        "dropout_rate": 0.5
    }
  },
  "losses": [
    {
       "object_name": "categorical_crossentropy",
       "object_params": {}
    }
  ],
  "metrics": [ "accuracy" ]
}

